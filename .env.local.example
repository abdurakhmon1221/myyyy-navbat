# NAVBAT Application Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# SMS Configuration (Eskiz.uz)
# ===========================================
# Set to 'true' to enable real SMS sending (default: false = simulation mode)
VITE_SMS_REAL_SEND=false

# SMS Provider (currently only 'eskiz' is fully supported)
VITE_SMS_PROVIDER=eskiz

# Eskiz.uz account credentials
# Register at https://eskiz.uz and get your credentials
VITE_ESKIZ_EMAIL=your_email@example.com
VITE_ESKIZ_PASSWORD=your_eskiz_password

# ===========================================
# API Configuration
# ===========================================
# Set to 'false' to use real backend API (default: true = mock mode)
VITE_USE_MOCK_API=true

# Backend API URL (when not using mock)
VITE_API_URL=http://localhost:3001/api

# WebSocket URL for real-time updates
VITE_WS_URL=ws://localhost:3001

# ===========================================
# OAuth Configuration (Optional)
# ===========================================
# Google OAuth Client ID
VITE_GOOGLE_CLIENT_ID=

# Telegram Bot ID for OAuth
VITE_TELEGRAM_BOT_ID=navbat_bot
